@model WEB452_Ass1_PENS.Models.Pen

@{
    ViewData["Title"] = "Edit";
}


<style>
    html {
        margin: 0;
        padding: 0;
        width: 100%;
    }

    body {
        background-color: #1a273f;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>


<div class="products-container">
    <div class="products-content">
        <div class="products-content-header">
            <h1 class="products-content-headerText">Edit Product Info</h1>
        </div>



        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="search-bar" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="search-bar" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="search-bar" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Colour" class="control-label"></label>
                        <input asp-for="Colour" class="search-bar" />
                        <span asp-validation-for="Colour" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Size" class="control-label"></label>
                        <input asp-for="Size" class="search-bar" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Erasable" /> @Html.DisplayNameFor(model => model.Erasable)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="general-Button" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<button class="general-Button"><a asp-action="Index">Back to List</a></button>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
